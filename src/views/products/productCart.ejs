<%- include('../partials/head') %>

<body>

    <%- include('../partials/header') %>
    
    <!-- Título y cantidad de items -->
    <section class="cart__summary">
        <article>
            MI CARRITO
        </article>
        <article>
            (3 ITEMS)
        </article>
    </section>

    <!-- Carrito en sí, con precios, cantidades y precio total -->
    <main>
        <!-- Fila de títulos de información de los productos mostrada en carrito -->
        <section class="cart__header">
            <article>ITEM</article>
            <article>PRECIO</article>
            <article>CANTIDAD</article>
            <article>TOTAL</article>
        </section>

        <!-- Producto 1 -->
        <section class="cart__item">
            <!-- Imagen y nombre de producto -->
            <div class="cart__item__img__name">
                <a href="/products/detail"><img src="/images/img/product003.jpg" alt="IMAGEN 1"></a>
                <article class="cart__item__name__details">
                        <p>PRODUCTO 1</p>
                        <p>Lorem ipsum dolor sit amet consectetur adipisicing elit. Lorem ipsum dolor sit amet consectetur adipisicing elit.</p>           
                </article>        
            </div>
            
            <!-- Comienza header para mobile -->
            <div class="cart__mobile__header">


            <!-- Encabezados para versión móvil -->
            <div class="cart__mobile__header__titles">
                <article>PRECIO</article>
                <article>CANTIDAD</article>
                <article>TOTAL</article>
            </div>


            <!-- Precio del producto -->
            <div class="cart__item__price__amount">
                <article>
                    $000
                </article>
                <!-- Form de cantidad de producto, con opcion de aumentar y disminuir -->
                <article class="cart__product__amount">
                    <textarea name="prod__amount_1" id="prod__amount_1" cols="2" rows="1" form="finCompra" readonly>1</textarea>
                    <a href=""><img src="/images/img/plus.png" alt=""></a>                    
                    <a href=""><img src="/images/img/minus.png" alt=""></a>
                </article>
                <!-- Total del producto (precio x cantidad) -->
                <article>
                    $000
                </article>
            </div>

            </div>
            <!-- Fin de cart mobile header -->

        </section>
        <!-- Fin producto 1 -->


        <!-- Producto 2 -->
        <section class="cart__item">
            <!-- Imagen y nombre de producto -->
            <div class="cart__item__img__name">
                <a href="/products/detail"><img src="/images/img/product001.jpg" alt="IMAGEN 2"></a>
                <article class="cart__item__name__details">
                        <p>PRODUCTO 2</p>
                        <p>Lorem ipsum dolor sit amet consectetur adipisicing elit. Lorem ipsum dolor sit amet consectetur adipisicing elit.</p>           
                </article>        
            </div>
            
            <!-- Comienza header para mobile -->
            <div class="cart__mobile__header">


            <!-- Encabezados para versión móvil -->
            <div class="cart__mobile__header__titles">
                <article>PRECIO</article>
                <article>CANTIDAD</article>
                <article>TOTAL</article>
            </div>


            <!-- Precio del producto -->
            <div class="cart__item__price__amount">
                <article>
                    $000
                </article>
                <!-- Form de cantidad de producto, con opcion de aumentar y disminuir -->
                <article class="cart__product__amount">
                    <textarea name="prod__amount_2" id="prod__amount_2" cols="2" rows="1" form="finCompra" readonly>2</textarea>
                    <a href=""><img src="/images/img/plus.png" alt=""></a>                    
                    <a href=""><img src="/images/img/minus.png" alt=""></a>
                </article>
                <!-- Total del producto (precio x cantidad) -->
                <article>
                    $000
                </article>
            </div>

            </div>
            <!-- Fin de cart mobile header -->

        </section>
        <!-- Fin producto 2 -->

        <!-- Subtotal, costo de envío, total final y botón finalizar compra -->
        <section class="cart__final__info">
            <article class="cart__final__row__subtotal">
                <p>Subtotal</p> 
                <p>$000</p>
            </article>
            <article class="cart__final__row__subtotal">
                <p>Envío</p> 
                <p>$000</p>
            </article>
            <article class="cart__final__row__total">
                <p>TOTAL</p> 
                <p>$000</p>
            </article>            
            <article>
                <form action="/" method="GET" id="finCompra">
                <button class="cart__buy__button" type="submit">FINALIZAR COMPRA</button>            
                </form>
            </article>
        </section>

    </main>

    <!-- Dejo vacío el footer para hacer copy paste de lo que arme Santi -->
    <%- include('../partials/footer') %>
    
</body>
</html>